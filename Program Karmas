def cetak_kartu(nomor_kartu):
    kartu = list_karmas.get(nomor_kartu)
    if kartu:
        print('{0}Kartu Mahasiswa {0}'.format(' '*25))
        print('{0}'.format('_'*80))
        print('|    ______  {0}|'.format(' '*66))
        print('|   |      | {0}{1}{2}|'.format(' '*10,'KEMENTRIAN PENDIDIKAN, KEBUDAYAAN,',' '*22))
        print('|   | LOGO | {0}{1}{2}|'.format(' '*17,'RISET, DAN TEKNOLOGI',' '*29))
        print('|   |______| {0}{1}{2}|'.format(' '*14,'UNIVERSITAS  SEBELAS MARET',' '*26))
        print('|{0}{1}{0}|'.format(' '*7,'JL. Ir. Sutami 36 A Kentingan Surakarta 57126, Telp. 0271 646994'))
        print('|{0}|'.format('='*78))
        print('|  ______________{0}|'.format(' '*62))
        nama='|  Nama             :  {0}'.format(kartu["nama"])
        print('|  |            {0}{1}|'.format(nama,' '*int(63-int(len(nama)))))
        nim='|  NIM              :  {0}'.format(kartu["nim"])
        print('|  |            {0}{1}|'.format(nim,' '*int(63-int(len(nim)))))
        tgl_lahir='|  Tgl. Lahir       :  {0}'.format(kartu["tgl_lahir"])
        print('|  |    FOTO    {0}{1}|'.format(tgl_lahir,' '*int(63-int(len(tgl_lahir)))))
        prodi='|  Prodi            :  {0}'.format(kartu["prodi"])
        print('|  |            {0}{1}|'.format(prodi,' '*int(63-int(len(prodi)))))
        fakultas='|  Fakultas         :  {0}'.format(kartu["fakultas"])
        print('|  |            {0}{1}|'.format(fakultas,' '*int(63-int(len(fakultas)))))
        print('|  |____________|{0}|'.format(' '*62))
        print('|_________________________________       {0}   |'.format('_'*35))
        print('|                                 \     |{0}|  |'.format(' '*35))
        print('|  KARTU MAHASISWA                 \    |{0}{1}{0}|  |'.format(' '*14,'BARCODE'))
        print('|  SARJANA                          \   |{0}|  |'.format('_'*35))
        print('|____________________________________\{0}|'.format('_'*41))
    else:
        print("Maaf, Nomor Kartu Tidak Ditemukan")

def hapus_kartu():
    nomor_kartu = int(input("Masukan Nomor Kartu yang Ingin Dihapus : "))
    if nomor_kartu in list_karmas:
        del list_karmas[nomor_kartu]
        print(f"Kartu Mahasiswa dengan nomor {nomor_kartu} telah dihapus")
    else:
        print("Maaf, nomor kartu tidak ditemukan")

while True:
    print("===========================================")
    print(" Selamat Datang di Program Kartu Mahasiswa ")
    print("===========================================")
    print("Daftar Menu Utama:")
    print("1. Input Data")
    print("2. Cetak Kartu")
    print("3. Hapus Kartu")
    print("4. Keluar")
    y = input("Pilih Menu: ")
    if y == "1":
        input_data()
    elif y == "2":
        nomor_kartu = int(input("Masukan Nomor Kartu yang Ingin Dicetak : "))
        cetak_kartu(nomor_kartu)
    elif y == "3":
        hapus_kartu()
    elif y == "4":
        print("======================================================")
        print("Terima kasih Telah Menggunakan Program Kartu Mahasiswa")
        print("======================================================")
        break
    else:
        print("Maaf, menu tidak tersedia")

